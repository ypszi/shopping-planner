{% macro recursiveComments(comment) %}
    {% if comment is array %}
        {% for key in comment|keys %}
            {% if key is string %}
                <li>{{ key }}</li>
            {% endif %}
        {% endfor %}

        <ul>
            {% for key, subComment in comment %}
                {{ _self.recursiveComments(subComment) }}
            {% endfor %}
        </ul>
    {% else %}
        <li>{{ comment }}</li>
    {% endif %}
{% endmacro %}

